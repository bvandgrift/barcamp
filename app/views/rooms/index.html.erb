<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%=h room.name %></td>
    <td><%= link_to 'Show', barcamp_room_path(room.barcamp, room) %></td>
    <td><%= link_to 'Edit', edit_barcamp_room_path(room.barcamp, room) %></td>
    <td><%= link_to 'Destroy', barcamp_room_path(room.barcamp, room), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a room', new_barcamp_room_path(@barcamp) %>
<%= link_to "Talks", barcamp_talks_path(@barcamp) %>
<%= link_to "Periods", barcamp_periods_path(@barcamp) %>
<%= link_to "Schedule Talks", barcamp_acceptances_path(@barcamp) %>