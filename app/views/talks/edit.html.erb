<h1>Editing talk</h1>

<% form_for(@talk, :url => barcamp_talk_path(@talk.barcamp, @talk)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </p>
  <p>
    <%= f.label :speaker_id %><br />
    <%= f.text_field :speaker_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', barcamp_talk_path(@talk.barcamp, @talk) %> |
<%= link_to 'Back', barcamp_talks_path(@talk.barcamp) %>