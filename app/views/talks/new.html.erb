<h1>New talk</h1>

<% form_for(@talk, :url => barcamp_talks_path(@talk.barcamp)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :speaker_name %><br />
    <%= f.text_field :speaker_name %>
  </p>
  <p>
    <%= f.label :hashtag %><br />
    <%= f.text_field :hashtag %>
  </p>
  
  <p>
    <%= f.submit 'Add talk' %>
  </p>
<% end %>