<h1>Editing session</h1>

<% form_for(@session, :url => barcamp_session_path(@barcamp, @session)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', barcamp_session_path(@barcamp, @session) %> |
<%= link_to 'Back', barcamp_sessions_path(@barcamp) %>